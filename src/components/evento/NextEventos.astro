---
import { getNextEventos } from '../../lib/api'
import RowEvento from './RowEvento'

const eventos = await getNextEventos()
---

{
    eventos.length > 0 && (
        <div>
            <h2 class="text-2xl font-bold py-4">Pr√≥ximos eventos live</h2>
            <div class="space-y-2">
                {eventos.map((event) => (
                    <RowEvento key={event.id} evento={event} showtour={true} />
                ))}
            </div>
            <div class="text-right mt-4">
                <a class="btn" href="/eventos">
                    Ver Todos
                </a>
            </div>
        </div>
    )
}

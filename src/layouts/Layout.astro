---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
Astro.response.headers.set(
    'Cache-Control',
    's-maxage=1, stale-while-revalidate'
)
import { ViewTransitions } from 'astro:transitions'
import { SEO } from 'astro-seo'
interface Props {
    title: string
}
const { title } = Astro.props
---

<!doctype html>
<html lang="es">
    <head>
        <!-- Google Tag Manager -->
        <script is:inline>
            ;(function (w, d, s, l, i) {
                w[l] = w[l] || []
                w[l].push({
                    'gtm.start': new Date().getTime(),
                    event: 'gtm.js',
                })
                var f = d.getElementsByTagName(s)[0],
                    j = d.createElement(s),
                    dl = l != 'dataLayer' ? '&l=' + l : ''
                j.async = true
                j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
                f.parentNode.insertBefore(j, f)
            })(window, document, 'script', 'dataLayer', 'GTM-KC75QSCR')
        </script>
        <!-- End Google Tag Manager -->
        <title>{title}</title>
        <SEO
            description="Toda la informaci칩n sobre los eventos y torneos de poker en vivo en todos los casinos de Espa침a."
            openGraph={{
                basic: {
                    title: 'Torneos Poker Live',
                    type: 'Eventos',
                    image: '/opengraph.png',
                },
            }}
            twitter={{
                creator: '@livetorneos',
            }}
            extend={{
                // extending the default link tags
                link: [
                    {
                        rel: 'icon',
                        href: '/favicon.svg',
                        type: 'image/svg+xml',
                    },
                ],
                // extending the default meta tags
                meta: [
                    {
                        name: 'twitter:image',
                        content: '/opengraph.png',
                    },
                    {
                        name: 'twitter:title',
                        content: 'Torneos Poker Live',
                    },
                    {
                        name: 'twitter:description',
                        content:
                            'Toda la informaci칩n sobre los eventos y torneos de poker en vivo en todos los casinos de Espa침a.',
                    },
                ],
            }}
        />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions />
    </head>
    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript
            ><iframe
                src="https://www.googletagmanager.com/ns.html?id=GTM-KC75QSCR"
                height="0"
                width="0"
                style="display:none;visibility:hidden"></iframe></noscript
        >
        <!-- End Google Tag Manager (noscript) -->
        <div class="flex flex-col h-screen justify-between">
            <Header />
            <div class="mb-auto mx-5"><slot /></div>
            <Footer />
        </div>
    </body>
</html>
